<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/make_quizz_row_bg"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/make_quizz_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/state_im"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pass"
            app:layout_constraintTop_toTopOf="@id/make_quizz_row_bg"
            app:layout_constraintEnd_toEndOf="@id/make_quizz_row_bg"
            android:layout_marginEnd="11dp"
            android:layout_marginTop="11dp"/>
        <ImageView
            android:id="@+id/make_quizz_row_suffle_im"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/make_quizz_row_bg"
            app:layout_constraintBottom_toBottomOf="@id/make_quizz_row_bg"
            app:layout_constraintStart_toStartOf="@id/make_quizz_row_bg"
            app:layout_constraintEnd_toEndOf="@id/make_quizz_row_bg"
            android:layout_margin="10dp"
            android:src="@drawable/ic_shuffle_black_24dp"/>
    <TextView
        android:id="@+id/text_test_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="29sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>