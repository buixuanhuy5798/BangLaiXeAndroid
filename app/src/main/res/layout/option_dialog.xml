<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">
            <TextView
                android:id="@+id/chon_hang_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Chọn hạng"
                android:layout_marginTop="13dp"
                android:textAlignment="center"
                android:textSize="19sp"
                android:textColor="#111"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/ban_muon_hoc_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bạn muốn học lý thuyết hạng"
                app:layout_constraintTop_toBottomOf="@id/chon_hang_textView"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:textSize="17sp"
                android:textColor="#111"
                android:textStyle="normal"
                />
            <View
                app:layout_constraintTop_toBottomOf="@id/ban_muon_hoc_textView"
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_marginTop="11dp"
                android:background="#F2F2F2" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <Button
            android:id="@+id/a1_button_dialog"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:text="A1, A2"
            android:background="@android:color/white"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#F2F2F2" />
        <Button
            android:id="@+id/b1_button_dialog"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:text="B1, B2"
            android:background="@android:color/white"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#F2F2F2" />
        <Button
            android:id="@+id/cancel_button_dialog"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:text="Cancel"
            android:textStyle="bold"
            android:background="@android:color/white"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#F2F2F2" />
    </LinearLayout>

</RelativeLayout>