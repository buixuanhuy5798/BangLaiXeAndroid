<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<!--        <androidx.constraintlayout.widget.Guideline-->
<!--            app:layout_constraintTop_toTopOf="parent"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:orientation="horizontal"-->
<!--            app:layout_constraintGuide_percent="0.875" />-->

        <TextView
            android:id="@+id/textLine1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SƠ ĐỒ THI SÁT HẠCH LÁI XE A1, A2 NĂM 2017"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="5dp" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/imageA1A2"
            android:src="@drawable/a1a2"
            android:layout_width="0dp"
            android:layout_height="200dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="30dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="30dp"
            app:layout_constraintTop_toBottomOf="@+id/textLine1"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/textLine2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NỘI DUNG 4 BÀI SA HÌNH SÁT HẠCH LÁI XE A1, A2"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/imageA1A2"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/textLine3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bài số 1: Lái xe theo vòng số 8\nBài số 2: Lái xe trên đường thẳng\nBài số 3: Lái xe trên đường ngoằn ngoèo\nBài số 4: Lái xe trên đường gồ ghề\n"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/textLine2"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/textLine4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Các lỗi bị trừ điểm:\n\n Điểm tối thiểu để đạt 80/100"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/textLine3"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/textLine5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="- Trừ 5 điểm: cán vạch, chết máy, chân chạm đất\n- Trừ 25 điểm (loại trực tiếp): học viên để té xe hoặc đi sai hình (đi ngược vòng) hoặc sẽ bị loại trực tiếp"
            app:layout_constraintTop_toBottomOf="@+id/textLine4"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="5dp" />

        <Button
            android:id="@+id/kinhNghiemThiA1A2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kinh nghiệm thi >>"
            android:textStyle="bold"
            android:textColor="#3046C1"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toBottomOf="@+id/textLine5"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="5dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>